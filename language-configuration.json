{
    "comments": {
        // symbol used for single line comment. Remove this entry if your language does not support line comments
        "lineComment": "#"
        // symbols used for start and end a block comment. Remove this entry if your language does not support block comments
        // "blockComment": [ "/*", "*/" ]
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // ref: https://github.com/trixnz/vscode-lua/blob/master/language-configuration.json
    "indentationRules": {
        "increaseIndentPattern": "^.*:\\s*$",
        "decreaseIndentPattern": "^\\s*(else|finally|elif\\s+.+)\\s*:\\s*$"
    },
    "onEnterRules": [
        // ref: https://github.com/microsoft/vscode/issues/11514
        // break comment into 2 lines
        {
            "beforeText": "^\\s*#",
            "afterText": ".+",
            "action": {
                "indent": "none",
                "appendText": "# "
            }
        },
        // exit scope
        {
            "beforeText": "^\\s+(break|continue|((return|raise)(\\s+.+)?))",
            "afterText": "$",
            "action": {
                "indent": "outdent"
            }
        },
        // no indent on empty line
        {
            "beforeText": "^\\s*$",
            "afterText": "^$",
            "action": {
                "indent": "none"
            }
        }
    ]
}